{
	"name": "bookus",
	"private": true,
	"version": "1.0.0",
	"main": "index.js",
	"license": "MIT",
	"workspaces": [
		"client",
		"server"
	],
	"scripts": {
		"precommit:server": "yarn workspace server precommit",
		"precommit:client": "yarn workspace client precommit",
		"precommit": "run-p precommit:server precommit:client",
		"format": "prettier --write \"**/*.{ts,tsx,css,md}\"",
		"posttest": "npm run format"
	},
	"devDependencies": {
		"@commitlint/cli": "^8.2.0",
		"@commitlint/config-conventional": "^8.2.0",
		"@typescript-eslint/eslint-plugin": "^2.7.0",
		"@typescript-eslint/parser": "^2.7.0",
		"eslint": "^6.6.0",
		"eslint-config-airbnb-base": "^14.0.0",
		"eslint-config-prettier": "^6.5.0",
		"eslint-plugin-import": "^2.18.2",
		"eslint-plugin-prettier": "^3.1.1",
		"husky": "^3.0.9",
		"lint-staged": "^9.4.2",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.19.1"
	},
	"husky": {
		"hooks": {
			"precommit": "yarn precommit",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"lint-staged": {
		"*.{ts,tsx,css,md}": [
			"prettier --write",
			"git add"
		]
	}
}
